
<div class="container">
	<div class="row">
		<div class="span8">
			<% tweets = Zombie.find(params[:id]).tweets %>
            <% tweets.each do |tweet| %>
            <div class="tweet">
            	<p>From: <%= tweet.zombie.name %></p>
            	<p>Status: <%= tweet.status %></p>
        	</div>
            <% end %>
            <% if tweets.empty? %>
            	<em>No tweets found</em>
            <% end %>

		</div>
	</div>
</div>